#include<bits/stdc++.h>
using namespace std;
 
 
void  Swap(int A[],int n)
{
    int temp,i=n;
    temp=A[n];
    while(i>1&&temp>A[i/2])
    {
       A[i]=A[i/2];
       i=i/2;
    }
    A[i]=temp;
}

void DeleteRoot(int A[],int n)
{
    int x,i,j;
    x=A[n];
    i=1;
    j=i*2;
    while(j<n-1)
    {
       if(A[j+1]>A[j])
       j=j+1;
       if(A[i]<A[j])
       {
       int t=A[i];
       A[i]=A[j];
       A[j]=t;
       i=j;
       j=j*2;      //deleted element gets stored at the end of the array
       }
       else
       break;
}
}

void createHeap()
{
   cout<<"Enter the number elements";
   int n;
   cin>>n;
   int A[n+1];
   cout<<"Enter the elements of the Array";
   for(int i=1;i<=n;i++)
   {
      cin>>A[i];
   }
    
    for(int i=2;i<=n;i++)
    {
    
    Swap(A,n);
    }
    
}    
